export CLICOLOR=true
if [ `uname` == "Darwin" ]; then
    alias vi=~/bin/mvim
    alias vim=~/bin/mvim
fi
alias view="vim -R"

export PS1="\h:\W \u\$ "
export EDITOR=vim
export TMPDIR=/tmp

. ~/.git-completion.bash

[ -e ~/.workrc ] && . ~/.workrc

export PATH=$HOME/bin:$PATH

export NVM_DIR="/Users/dlowe/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm
